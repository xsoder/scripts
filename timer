#!/usr/bin/env bash

options="Example(5m 5s 1h)"
input=$(printf "%s" "$options" | dmenu -i -p "Select an option:")

if [ -n "$input" ]; then
    echo "You selected: $input"
    # Replace 'sowon' with the appropriate command if needed
    if ! sowon "$input"; then
        notify-send "Error: Failed to execute sowon with input '$input'."
    fi
else
    notify-send "No option selected."
fi

